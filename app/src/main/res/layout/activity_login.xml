<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.ygb.turismotepic.Login">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="162dp"
        android:id="@+id/etUsuario" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/etUsuario"
        android:layout_alignEnd="@+id/etUsuario"
        android:layout_marginTop="40dp"
        android:id="@+id/etPass" />

    <TextView
        android:text="@string/title_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etPass"
        android:layout_alignStart="@+id/etUsuario"
        android:layout_marginBottom="53dp"
        android:id="@+id/tvTitleUsuario"
        android:textColor="@android:color/background_dark" />

    <Button
        android:text="@string/btn_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbRemenberme"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/btnLogin" />

    <TextView
        android:text="@string/title_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitlePass"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/etUsuario"
        android:layout_alignStart="@+id/etPass"
        android:textColor="@android:color/background_dark" />

    <CheckBox
        android:text="@string/title_recordar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbRemenberme"
        android:textSize="12sp"
        android:layout_below="@+id/etPass"
        android:layout_alignStart="@+id/etPass"
        android:layout_toStartOf="@+id/tvRegistro"
        android:textColor="@android:color/background_dark"
        android:layout_alignEnd="@+id/etPass" />

    <TextView
        android:text="@string/btn_registrarse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRegistro"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorPrimary" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        android:id="@+id/ivBtnCerrar"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/ivLogo"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivBtnCerrar"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
